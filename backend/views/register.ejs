<%- include('layout') %>

<div class="container">
  <h2>Register</h2>

  <% if (error) { %>
    <p style="color: red;"><%= error %></p>
  <% } %>

  <form id="registerForm" action="/user/register" method="POST">
    <label>Name:</label>
    <input type="text" name="name" required>

    <label>Email:</label>
    <input type="email" name="email" required>

    <label>Password:</label>
    <input type="password" name="password" required>

    <button id="registerButton" style="margin-top: 20px;" type="submit">Register</button>
  </form>

  <div style="margin-top: 30px;">
    <p >Have an account?  <a href="/user/login">Login here</a></p>
  </div>
</div>

<script>
  document.getElementById('registerForm').addEventListener('submit', function() {
      const loginButton = document.getElementById('registerButton');
      loginButton.innerHTML = '<i class="fa fa-spinner fa-spin"></i> Signing in...';
      loginButton.disabled = true;
  });
</script>
